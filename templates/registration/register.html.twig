{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<main class="container">
    <section class="row justify-content-center">
        <div class="col-12 connexion">
            <p>Pas encore inscrit,<br>
                inscrivez vous et  suivez gratuitement nos formations</p>
        </div>
    </section>
    <section class="row justify-content-center align-items-center">
        <aside class="col-4">
            <div class="row justify-content-center">
              <img class="col-8" src="{{ asset('assets/ressources/socialmedia.jpg') }}" alt="">
              <img class="col-8" src="{{ asset('assets/ressources/technology.jpg') }}" alt="">
            </div>
        </aside>
        <div class="col-lg-4">

            {{ form_start(registrationForm) }}
                <div class="pageco">
                    {{ form_row(registrationForm.nom) }}
                    {{ form_row(registrationForm.photo) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms) }}
                    <div class="connexion">
                        <button type="submit" class="connectbtn">Inscription</button>
                    </div>
                </div>
            {{ form_end(registrationForm) }}
        </div>
        <aside class="col-4">
            <div class="row justify-content-center">
              <img class="col-8" src="{{ asset('assets/ressources/ai.jpg') }}" alt="">
              <img class="col-8" src="{{ asset('assets/ressources/laptop.jpg') }}" alt="">
            </div>
        </aside>
    </section>
    <div class="linkcgu">
        <a href={{ path ('app_cgu') }}>Conditions Générales d'utilisation</a>
    </div>
</main>
{% endblock %}
