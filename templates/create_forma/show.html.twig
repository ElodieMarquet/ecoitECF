{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
<main class="container">
    <h1>Formation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ formation.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ formation.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ formation.description }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ formation.contenu }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ formation.video }}</td>
            </tr>
            <tr>
                <th>Date création</th>
                <td>{{ formation.createdAt ? formation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ formation.slug }}</td>
            </tr>
        </tbody>
    </table>

    <button class="connectbtn">
    <a href="{{ path('app_create_forma_index') }}">Revenir à la liste</a>
    </button>
    <button class="connectbtn">
    <a href="{{ path('app_create_forma_edit', {'id': formation.id}) }}">Modifier</a>
    </button>

    {{ include('create_forma/_delete_form.html.twig') }}
</main>
{% endblock %}
