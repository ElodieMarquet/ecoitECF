{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<main class="container">
    <h1>Contactez-nous</h1>
    
    <section class="row justify-content-center align-items-center">        
        <aside class="col-4">
            <div class="row justify-content-center">
              <img class="col-8" src="{{ asset('assets/ressources/contact.jpg') }}" alt="">              
            </div>
        </aside>
        <div class="col-lg-4 connexion">
    
            {{ form_start(form) }}
                <div class="pageco">
                    {{ form_row(form.nom, {'attr':{'class':'form-control'}}) }}
                    {{ form_row(form.email, {'attr':{'class':'form-control'}}) }}
                    {{ form_row(form.message, {'attr':{'class':'form-control'}}) }}
                    <div class="connexion">
                        <button type="submit" class="connectbtn">Envoyer</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
        <aside class="col-4">
            <div class="row justify-content-center">
              <img class="col-8" src="{{ asset('assets/ressources/businessman.jpg') }}" alt="">              
            </div>
        </aside>
    </section>
</main>
{% endblock %}
